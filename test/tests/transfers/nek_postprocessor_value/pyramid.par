[OCCA]
  backend = CPU

[GENERAL]
  stopAt = numSteps
  numSteps = 1
  dt = 1.0e-4
  polynomialOrder = 2
  checkpointControl = steps
  checkpointInterval = 1
  scalars = temperature

[MESH]
  file = "../../nek_mesh/first_order/pyramid.re2"

[FLUID VELOCITY]
  viscosity = 1.0
  density = 1.0
  residualTol = 1.0e-6
  boundaryTypeMap = inlet, outlet, wall, wall, wall, wall, wall, wall

[SCALAR TEMPERATURE]
  boundaryTypeMap = inlet, I, I, I, I, I, I, I
  transportCoeff = 1.0
  diffusionCoeff = 1.0
  residualTol = 1.0e-6
