[OCCA]
  backend = CPU

[GENERAL]
  stopAt = numSteps
  numSteps = 1
  dt = 5.0e-4
  polynomialOrder = 1
  checkpointControl = steps
  checkpointInterval = 1
  scalars = temperature

[MESH]
  file=../../nek_output/pyramid.re2

[FLUID VELOCITY]
  solver = none

[FLUID PRESSURE]

[SCALAR TEMPERATURE]
  diffusionCoeff = 1.0
  transportCoeff = 1.0
  boundaryTypeMap = t, I, I, I, I, I, I, I
  residualTol = 1e-6
