[OCCA]
  backend = CPU

[GENERAL]
  stopAt = numSteps
  numSteps = 10
  dt = 0.5
  polynomialOrder = 3
  checkpointControl = steps
  checkpointInterval = 2
  scalars = temperature

[MESH]
  file = "../../nek_mesh/first_order/pyramid.re2"

[FLUID VELOCITY]
  solver = none

[SCALAR TEMPERATURE]
  residualTol = 1.0e-5
  boundaryTypeMap = f, f, f, f, t, t, I, I
