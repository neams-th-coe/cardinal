[OCCA]
  backend = CPU

[GENERAL]
  stopAt = numSteps
  numSteps = 1
  dt = 5.0e-4
  polynomialOrder = 1
  checkpointControl = steps
  checkpointInterval = 2
  scalars = temperature, scalar01, scalar02, scalar03

[FLUID VELOCITY]
  solver = none

[FLUID PRESSURE]

[SCALAR TEMPERATURE]
  solver = none

[SCALAR SCALAR01]
  solver = none

[SCALAR SCALAR02]
  solver = none

[SCALAR SCALAR03]
  solver = none

